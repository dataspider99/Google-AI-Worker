# Google OAuth - from Google Cloud Console
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
# For production use your public URL, e.g. https://your-domain.com/auth/google/callback
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Oshaani Agent - from https://oshaani.com/dashboard (API key identifies the agent)
OSHAANI_API_BASE_URL=https://oshaani.com
OSHAANI_AGENT_API_KEY=your-agent-api-key

# App
# In production set to "production" and use a long random SECRET_KEY (e.g. openssl rand -hex 32)
ENVIRONMENT=development
SECRET_KEY=your-secret-key-for-sessions
APP_BASE_URL=http://localhost:8000

# Production: comma-separated allowed CORS origins (empty = use APP_BASE_URL only)
# CORS_ORIGINS=https://your-domain.com

# Optional: data directory (default: ./data or temp). Production: set to a persistent volume path.
# DATA_DIR=/var/lib/google-employee/data

# Automation (runs workflows for all logged-in users)
AUTOMATION_ENABLED=true
AUTOMATION_INTERVAL_MINUTES=30
# Set to false to disable auto-replies in Google Chat (stops new threads from being created)
AUTOMATION_CHAT_AUTO_REPLY_ENABLED=true

# Logging (DEBUG, INFO, WARNING, ERROR). Production typically INFO.
LOG_LEVEL=INFO

# Server (when using python main.py). Production: RELOAD=false, WORKERS=1
# HOST=0.0.0.0
# PORT=8000
# RELOAD=false
# WORKERS=1
